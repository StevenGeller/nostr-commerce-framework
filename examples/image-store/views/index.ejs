<%- include('layout') %>

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Available Images</h1>
    </div>
</div>

<div class="row">
    <% images.forEach(function(image) { %>
        <div class="col-md-4">
            <div class="card image-card">
                <img src="/preview/<%= image.id %>" class="card-img-top preview-image" alt="<%= image.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= image.title %></h5>
                    <p class="card-text"><%= image.description %></p>
                    <p class="card-text"><strong>Price: <%= image.price %> sats</strong></p>
                    <a href="/image/<%= image.id %>" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>